<div>
  <%= form_with model: @post, class:'form', url: user_posts_path(@user) do |form| %>
    <%= form.label :title, class: 'post_label' %>
    <%= form.text_field :title, autofocus: true, required: true, class:'post_title' %>
    <%= form.label :text, class: 'post_label' %>
    <%= form.text_area :text, autofocus: true, required: true, class:'post_text' %>
    <%= form.submit "Post", class: 'post_btn' %>
  <% end %>
</div>
