<div class='header'>
  <h1>Blog App</h1>
  <%= button_to("Log Out", destroy_user_session_path, method: :delete, class: 'log-out') %>
</div>

<%= button_to("Home", root_path, method: :get) %>
<%= render 'partials/user', user: @user%>
<%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %>
<div class='bio'><%=@user.bio%></div>
<ul class='user-post-list'>
<%if @user.return_three_most_recent_posts.empty?%>
<p class='no-posts'>No posts</p>
<%else%>
<%@user.return_three_most_recent_posts.each do |post| %>
<li>
<%=render 'partials/post', post: post%>
</li>
<%end%>
<%end%>
</ul>

<div class='content-view-all-post-btn'>
	<%= link_to "Add a Post...", new_user_post_path(@user), class: 'post_btn' %>
	<%= link_to "View all posts", user_posts_path(@user), class: 'view-all-post-btn' %>
</div>
